<div class="col-md-4 mx-auto">
<div class="card">
    <div class="card-header">
        <h3>Edit Notes</h3>
    </div>
    <div class="card-body">
        <form action="/notes/edit-notes/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <input type="text" name="title" class="form-control " placeholder="Title" value="{{ note.title }}"> 
            </div>
            <div class="form-group">
                <input type="text" name="description" class="form-control mt-2" placeholder="Description" value="{{note.description}}"> 
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block mt-2" type="submit">Save</button>
            </div>
        </form>

    </div>
</div>
</div>