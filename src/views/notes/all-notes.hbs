<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-item-center">
                    {{ title }} <a href="/notes/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{ description }}</p>
                <form action="/notes/delete/{{_id}}?_method=delete" method="post" >
                    <input type="hidden" name="_method" value="delete">
                    <button class="btn btn-danger btn-primary btn-sm" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto" style="width: 18rem;">
        <div class='card-body'>
            <div class="lead card-title">Inserte Nota</div>
            <a href="/notes/add"  type="button" class="btn btn-success">Create One</a>
        </div>
    </div>
    {{/each}}
    
</div>